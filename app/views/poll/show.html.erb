<h1><%= @poll.title %></h1>

<%= form_with(url: '/vote') do %>
  <% @poll.choices.each do |choice|  %>
  <%= radio_button("vote", "value", choice) %><%= choice %><br/>
  <% end %>
  <%= hidden_field(:poll, :id) %>
  <br/>
  <%= submit_tag("Vote") %>
<% end %>

<br/>
Don't want to vote?
<% if @poll.next_poll_id %>
<%= link_to "Skip to next poll >", "/poll/#{@poll.next_poll_id}" %>
<% else %>
<%= link_to "Skip to results >", "/poll/list/#{@poll.id}" %>
<% end %>
