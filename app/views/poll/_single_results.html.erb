<table>
  <tr>
    <th>Choice</th>
    <th>Number of votes</th>
  </tr>
  <% @poll.results.sort.each do |content, votes| %>
    <tr>
      <td><%= content %></td>
      <td><%= pluralize(votes.size, 'vote') %></td>
    </tr>
  <% end %>
</table>

<h2>Total</h2>

<%=
  pluralize(@poll.votes.size, 'vote') + if @poll.can_have_average?
                                          format(", average is %.1f",
                                                 @poll.average)
                                          else
                                            ""
                                          end
%>
